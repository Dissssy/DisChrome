{
	"background": {
		"scripts": [ "background.js" ]
	},
    "manifest_version": 2,
	"version": "2.2",
    "name": "DisChrome", 
    "description": "A chrome/discord webhook bridge, allowing for easy shitposting",
    "page_action": {
        "default_icon": "icon.png",
		"default_title": "DisChrome"
    },
	
	"options_page": "options.html",
	
    "permissions": [
        "activeTab",
		"storage",
		"contextMenus",
		"https://discord.com/api/webhooks/*"
    ]
}